<% include partials/_header %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5 offset-md-3 card">
                <div class="card-body">
                    <form action="/home/categories/update/<%= data.id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="category" value="<%= data.category%>" placeholder="Name" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="description" value="<%= data.description%>" placeholder="Description" class="form-control" autofocus>
                        </div>
                        <button type="submit" class="btn btn-primary">
            Update category
          </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <% include partials/_footer %>