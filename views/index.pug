include nav
include side_header
html
	head
		title= 'Goods List'
		style
		
			include style.css
	body
		div(class='index-container')
			each val, index in goodsList
				a(href='product?id='+val['id'])
					p #{val['name']}
					img(
						src='./images/'+val['image']
						)
					p #{val['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')}
				ul(class='card-actions')
					li
						button(
							data-goods_id=val['id']
							class='button button-primary add-to-cart'
						) Add to cart
