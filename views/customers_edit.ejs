<% include partials/_header %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5 offset-md-3 card">
                <div class="card-body">
                    <form action="/home/users/update/<%= data.id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="first_name" value="<%= data.first_name%>" placeholder="Name" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="last_name" value="<%= data.last_name%>" placeholder="Surname" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="mob_no" value="<%= data.mob_no%>" placeholder="Mobile number" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="user_name" value="<%= data.user_name%>" placeholder="Login" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="password" value="<%= data.password%>" placeholder="Password" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-primary">
            Add customer
          </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <% include partials/_footer %>